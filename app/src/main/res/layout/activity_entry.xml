<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity">

    <EditText
        android:id="@+id/product_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Enter Product ID"
        android:gravity="center"
        android:inputType="number"/>

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/product_id"
        android:hint="Enter Product Name"
        android:gravity="center"/>

    <EditText
        android:id="@+id/product_desc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        android:hint="Enter Product Description"
        android:gravity="center"/>

    <EditText
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/product_desc"
        android:hint="Enter Product Price"
        android:gravity="center"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/provider_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/product_price"
        android:hint="Enter Provider Name"
        android:gravity="center"/>

    <EditText
        android:id="@+id/provider_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/provider_name"
        android:hint="Enter Provider Email"
        android:gravity="center"/>

    <EditText
        android:id="@+id/provider_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/provider_email"
        android:hint="Enter Provider Contact"
        android:gravity="center"
        android:inputType="phone"/>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/provider_phone"
        android:layout_margin="15dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>